@model Product 
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group mb-2">
        <label asp-for="BookName" class="form-label"></label>
        <input asp-for="BookName"  class="form-control" placeholder="Enter name">
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="PageCount"></label>
        <input asp-for="PageCount"  class="form-control"  placeholder="Enter pagecount">
        <span asp-validation-for="PageCount" class="text-danger"></span>
    </div>
    <div class="input-group mb-2">
        <input type="file" name="imageFile" id="imageFile" class="form-control">

    </div>
    <img src="~/img/@Model.Image" alt="Image" style="width: 80px;">
    <input type="hidden" asp-for="@Model.Image">
    <div class="form-group mb-2">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId"asp-items="ViewBag.Categories" class="form-control mb-2">
            <option value="">Hepsi</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-check mb-2">
                <input type="checkbox" name="IsActive" id="IsActive" class="form-check-input">
        <label asp-for="IsActive" class="form-check-label">IsActive</label>
        <span asp-validation-for="IsActive"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>