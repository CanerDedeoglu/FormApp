@{
    ViewData["Title"] = "Create";
}

<form action="/Home/Create" method="post">
    <div class="form-group mb-2">
        <label for="BookName" class="form-label">Name</label>
        <input type="text" class="form-control" id="BookName" name="BookName" placeholder="Enter name">
    </div>
    <div class="form-group mb-2">
        <label for="PageCount">Sayfa Sayısı</label>
        <input type="text" class="form-control" id="PageCount" name="PageCount" placeholder="Enter pagecount">
    </div>
    <div class="form-group mb-2">
        <label for="Image">Resim</label>
        <input type="file" class="form-control" id="Image" name="Image" placeholder="Enter image">
    </div>
    <div class="form-group mb-2">
        <label for="CategoryId">Kategori</label>
        <select class="form-control mb-2" id="CategoryId" name="CategoryId">
            <option value="0">Hepsi</option>
            @foreach (var item in ViewBag.Categories)
            {
                <option value="@item.CategoryId">@item.CategoryName</option>
            }
        </select>
    </div>
    <div class="form-check mb-2">
        <input class="form-check-input" type="radio" name="IsActive" id="IsActive" >
        <label class="form-check-label" for="IsActive">
            Aktif
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>